<!doctype html>
<html class="no-js">
  <%- include ../include/header.ejs %>
  <body ng-app="register_app" ng-controller="registerController">
    <%- include ../include/snap_header.ejs %>
                        <br>
                        <div class="container">
                          <div class="panel panel-default" >
                            <div class="panel-heading" style="background:#18aa8d ; color:white;"><h1>Register</h1></div>
                            <div class="panel-body">
                              <form name="regForm" novalidate class="form-horizontal" style="color:black;" >
                              
                              <!-- SSN -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="textinput">SSN</label>  
                                <div class="col-md-4">
                                  <input id="textinput" name="ssn" ng-model="ssn" type="text" placeholder="1234567890123" class="form-control input-md" required ng-minlength="13" ng-maxlength="13" ng-pattern="/^\d+$/">
                                  <span style="color:red" ng-show="regForm.ssn.$dirty && regForm.ssn.$invalid">
                                    <span ng-show="regForm.ssn.$error.required">SSN is required.</span>
                                    <span ng-show="regForm.ssn.$error.minlength">SSN must be length of 13.</span>
                                    <span ng-show="regForm.ssn.$error.maxlength">SSN must be length of 13.</span>
                                    <span ng-show="regForm.ssn.$error.pattern">SSN must contain only numbers.</span>
                                  </span>
                                </div>
                              </div>

                              <!-- Username -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="Username">Username</label>  
                                <div class="col-md-4">
                                  <input id="Username" name="username" ng-model="username" type="text" placeholder="abcdefg" class="form-control input-md" required ng-minlength="6">
                                  <span style="color:red" ng-show="regForm.username.$dirty && regForm.username.$invalid">
                                    <span ng-show="regForm.username.$error.required">Username is required.</span>
                                    <span ng-show="regForm.username.$error.minlength">Username must contain at least 6 characters.</span>
                                  </span>
                                </div>
                              </div>
                              <!-- Password -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="Password">Password</label>
                                <div class="col-md-4">
                                  <input id="Password" name="password" ng-model="password" type="password" placeholder="" class="form-control input-md" required ng-minlength="6" ng-change="resetNotMatchAlert()">
                                  <span style="color:red" ng-show="regForm.password.$dirty && regForm.password.$invalid">
                                    <span ng-show="regForm.password.$error.required">Password is required.</span>
                                    <span ng-show="regForm.password.$error.minlength">Password must contain at least 6 characters.</span>
                                  </span>
                                </div>
                              </div>

                              <!-- Repeat Password -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="RepeatPassword">Repeat Password</label>
                                <div class="col-md-4">
                                  <input id="RepeatPassword" name="repeatPassword" ng-model="repeatPassword" type="password" placeholder="" class="form-control input-md" required ng-change="resetNotMatchAlert()">
                                  <span style="color:red" ng-show="regForm.repeatPassword.$dirty && regForm.repeatPassword.$invalid">
                                    <span ng-show="regForm.repeatPassword.$error.required">Re-Password is required.</span>
                                    <span ng-show="regForm.repeatPassword.$error.pwMatch">Re-Password is not matched.</span>
                                  </span>
                                  <span style="color:red" ng-show="pwNotMatch">
                                    <span ng-show="pwNotMatch">Re-Password is not matched.</span>
                                  </span>
                                </div>
                              </div>

                              <!-- Email-->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="Email">Email</label>  
                                <div class="col-md-4">
                                  <input id="Email" name="email" ng-model="email" type="email" placeholder="l.skywalker@lucas.un" class="form-control input-md" required ng-pattern="/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/">
                                  <span style="color:red" ng-show="regForm.email.$dirty && regForm.email.$invalid">
                                    <span ng-show="regForm.email.$error.required">Email is required.</span>
                                    <span ng-show="regForm.email.$error.pattern">This email is invalid.</span>
                                  </span>
                                </div>
                              </div>

                              <!-- Firstname -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="textinput">Firstname</label>  
                                <div class="col-md-4">
                                  <input id="textinput" name="firstname" ng-model="firstname" type="text" placeholder="Luke" class="form-control input-md" required>
                                  <span style="color:red" ng-show="regForm.firstname.$dirty && regForm.firstname.$invalid">
                                    <span ng-show="regForm.firstname.$error.required">Firstname is required.</span>
                                  </span>
                                </div>
                              </div>

                              <!-- Lastname -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="">Lastname</label>  
                                <div class="col-md-4">
                                  <input id="" name="lastname" ng-model="lastname" type="text" placeholder="Skywalker" class="form-control input-md" required>
                                  <span style="color:red" ng-show="regForm.lastname.$dirty && regForm.lastname.$invalid">
                                    <span ng-show="regForm.lastname.$error.required">Lastname is required.</span>
                                  </span>
                                </div>
                              </div>

                              <!-- Gender -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="Gender">Gender</label>
                                <div class="col-md-4"> 
                                  <label class="radio-inline" for="Gender-0">
                                    <input type="radio" name="gender" ng-model="gender" id="Gender-0" value="M" checked="checked">
                                    Male
                                  </label> 
                                  <label class="radio-inline" for="Gender-1">
                                    <input type="radio" name="gender" ng-model="gender" id="Gender-1" value="F">
                                    Female
                                  </label>
                                </div>
                              </div>

                              <!-- Blood type -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="BloodType">Blood Type</label>
                                <div class="col-md-2">
                                  <select id="BloodType" name="blood_type" ng-model="blood_type" class="form-control">
                                    <option value="A">A</option>
                                    <option value="B">B</option>
                                    <option value="AB">AB</option>
                                    <option value="O">O</option>
                                    <option value="X">Unknown</option>
                                  </select>
                                </div>
                              </div>

                              <!-- Tel No. -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="Tel">Tel.</label>  
                                <div class="col-md-4">
                                  <input id="Tel" name="telNum" ng-model="telNum" type="text" placeholder="012345678" class="form-control input-md" required ng-pattern="/^\d+$/">
                                  <span style="color:red" ng-show="regForm.telNum.$dirty && regForm.telNum.$invalid">
                                    <span ng-show="regForm.telNum.$error.required">Telephone number is required.</span>
                                    <span ng-show="regForm.telNum.$error.pattern">Telephone number must contain only numbers</span>
                                  </span>
                                </div>
                              </div>
                              <!-- Address -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="Address">Address</label>
                                <div class="col-md-4">                     
                                  <textarea class="form-control" id="Address" name="address" ng-model="address" required></textarea>
                                  <span style="color:red" ng-show="regForm.address.$dirty && regForm.address.$invalid">
                                    <span ng-show="regForm.address.$error.required">Address is required.</span>
                                  </span>
                                </div>
                              </div>
                              <!-- Register -->
                              <div class="form-group">
                                <label class="col-md-4 control-label" for="singlebutton"></label>
                                <div class="col-md-4">
                                  <button id="registerBtn" name="registerBtn" class="btn btn-default-lg" style="background:#18aa8d ; color:white;" ng-disabled="regForm.$invalid" ng-click="checkRegister()" >Register</button>
                                  <input type="reset" id="ResetButton" name="ResetButton" class="btn btn-danger" value="Reset">
                                </div>
                              </div>

                            </form>
                            </div>
                          </div>
                          
                        </div>
                    
    <%- include ../include/snap_footer.ejs %>

    <!-- Confirm register modal -->
    <modal title="Confirm Registration" visible="showConfirmRegModal">
      wtfffffffffffff
    </modal>


    <!-- build:js({.tmp,app}) scripts/scripts.js -->
    <script src="/javascripts/register_app.js"></script>
    <!-- endbuild -->

    
    



  </body>
</html>