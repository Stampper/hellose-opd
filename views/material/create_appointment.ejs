<!DOCTYPE html>
<% layout('layout') -%>
     
     <!-- Heading -->
     <md-content flex id="content">
      <md-toolbar>
        <div class="md-toolbar-tools">
          <md-button class="md-icon-button" ng-click="toggleNav('left')" hide-gt-md aria-label="Menu">
            <md-icon md-font-library="material-icons">menu</md-icon>
          </md-button>
          <h2>
            <span>Toolbar with Icon Buttons</span>
          </h2>
        </div>
      </md-toolbar>

      <!-- Content -->
      <md-content ng-controller="symptomCtrl" flex layout-padding>
      <form ng-submit="submit()" name="userForm">
        <h1 class="md-title">Enter Symptoms/Causes</h1>
         <div layout="row">
          <md-input-container flex="80">
            <md-input-container class="md-block">
            <label>Symptoms/Causes</label>
            <textarea ng-model="symptoms" columns="1" md-maxlength="150" rows="5"></textarea>
          </md-input-container>
          <br>
        <h1 class="md-title">Choose Department and Doctor</h1>
        <div layout layout-sm="column">
          <md-input-container flex="40">
          <label>Department</label>
            <md-select ng-model="department">
              <md-option ng-repeat="dep in departmentList" value="{{dep.id}}">
                {{dep.name}}
              </md-option>
            </md-select>
          </md-input-container>
          <md-input-container flex="60">
            <label>Doctor</label>
            <md-select ng-model="doctor">
              <md-option ng-repeat="doc in doctorList" value="{{doc.id}}">
                {{doc.name}}  - {{doc.department}}
              </md-option>
            </md-select>
          </md-input-container>
          </div>
        </div>
        <md-content layout="row" layout-align="center center">
        <md-button type="submit" class="md-raised md-primary">Next</md-button>
        </md-content>
      </form>
      </md-content>
      



