<!doctype html>
<% layout('layout') -%>
<div class="container" style="color: black; width: auto" ng-controller="ListCtrl">
  <h1>Patient List</h1>
  <button type="button" class="btn btn-primary" ng-click="generateData()">Generate Data</button>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Patient ID</th>
        <th>SSN</th>
        <th>Name</th>
        <th>Records</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="patient in patients">
        <td>{{ patient.patient_id }}</td>
        <td>{{ patient.ssn }}</td>
        <td>{{ patient.firstname}} {{ patient.lastname }}</td>
        <td>
          <a href="/patients/{{ patient.patient_id }}" style="color: black">
            <i class="fa fa-list"></i>
          </a>
        </td>
        <td><i class="fa fa-pencil"></i></td>
        <td><i class="fa fa-trash-o"></i></td>
      </tr>
    </tbody>
  </table>
</div>
